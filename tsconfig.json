{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2017"
    ],
    "target": "ES2017",
    "paths": {
      "*": [
        "./typings/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@dto/*": [
        "./dto/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@app/*": [
        "./app/*"
      ],
      "@UI/*": [
        "./UI/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@src/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
  },
  "include": [
    "src",
    "./global.d.ts"
  ]
}
